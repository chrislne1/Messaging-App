generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  messages  Message[]
}

model Message{
  id        Int       @id @default(autoincrement())
  text      String
  sentAt    DateTime  @default(now())
  senderId  Int
  sender    User @relation(fields: [senderId], references: [id])
}
